<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.homelinux.paubox"
	android:versionCode="6"
	android:versionName="1.2"
	>
	
	<application android:icon="@drawable/coinchoid_icon"
		android:label="@string/app_name" android:debuggable="false" android:theme="@style/CoinchoidTheme">
		
		<activity
			android:name=".AnnounceActivity"
			android:label="@string/app_name"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".NewGameActivity"
			android:label="@string/app_name"
			android:screenOrientation="portrait">
		</activity>

		<activity
			android:name=".WaitingActivity"
			android:label="@string/app_name"
			android:screenOrientation="portrait">
		</activity>
		<activity
			android:name=".ScoreDisplayActivity"
			android:label="@string/app_name"
			android:screenOrientation="portrait">
		</activity>
		<activity
			android:name=".PreferencesActivity"
			android:label="@string/app_name"
			android:screenOrientation="portrait">
		</activity>
		<activity
			android:name=".EditActivity"
			android:label="@string/app_name"
			android:screenOrientation="portrait">
		</activity>
	</application>


	<uses-permission
		android:name="android.permission.WAKE_LOCK" >
	</uses-permission>
	
	<uses-sdk
	    android:targetSdkVersion="15"
		android:minSdkVersion="4">
	</uses-sdk>
</manifest>

