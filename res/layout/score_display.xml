<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TableLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:stretchColumns="*"
		android:background="#818181">
		<TableRow>
			<TextView android:id="@+id/display_header_left" 
				android:background="#000000"
				android:layout_marginRight="1px" android:layout_marginBottom="1px"
				android:textSize="25sp"
				android:gravity="center" android:textStyle="bold" android:typeface="monospace"/>
			<TextView android:id="@+id/display_header_right"
				android:textSize="25sp"
				android:background="#000000"
				android:layout_marginBottom="1px" android:textStyle="bold" 
				android:gravity="center" android:typeface="monospace"/>
		</TableRow>
	</TableLayout>
	<ScrollView
		android:id="@+id/ScrollView01" android:layout_width="wrap_content"
		android:layout_height="fill_parent">
		<TableLayout android:id="@+id/display_table"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:stretchColumns="*" android:background="#818181">
		</TableLayout>
	</ScrollView>
</LinearLayout>