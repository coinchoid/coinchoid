<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	<TextView
		android:id="@+id/debug_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="TextView de debug"
	/>
	<Spinner
		android:id="@+id/spinner"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:drawSelectorOnTop="true"
		android:prompt="@string/planet_prompt"
	/>
	<RadioGroup
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>
		<RadioButton
			android:id="@+id/radio_heart"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/trump_heart"
		/>
		<RadioButton
			android:id="@+id/radio_diamond"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/trump_diamond"
		/>
		<RadioButton
			android:id="@+id/radio_spade"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/trump_spade"
		/>
		<RadioButton
			android:id="@+id/radio_club"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/trump_club"
		/>
		<RadioButton
			android:id="@+id/radio_alltrump"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/trump_alltrump"
		/>
		<RadioButton
			android:id="@+id/radio_notrump"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/trump_notrump"
		/>
	</RadioGroup>
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		>
		<Button
			android:id="@+id/button_go"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/go"
		/>
	</LinearLayout>
</LinearLayout>
